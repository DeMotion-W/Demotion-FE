{
  "manifest_version": 3,
  "name": "Demotion-FE",
  "version": "1.0.0",
  "description": "Demotion 확장 프로그램",
  "permissions": ["tabs", "sidePanel", "notifications"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Demotion",
    "default_icon": {
      "16": "icons/icons-16.png",
      "48": "icons/icons-48.png",
      "128": "icons/icons-128.png"
    }
  },
  "icons": {
    "16": "icons/icons-16.png",
    "48": "icons/icons-48.png",
    "128": "icons/icons-128.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["index.html", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
